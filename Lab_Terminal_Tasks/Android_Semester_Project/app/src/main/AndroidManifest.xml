<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android_semester_project">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android_Semester_Project">




        <receiver android:name=".StartAppOnBoot"
            android:exported="true"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>


        <activity
            android:name=".DestinationActivity"
            android:exported="true" />
        <activity
            android:name=".VollyLibraryActivity"
            android:exported="true" />
        <activity
            android:name=".ServiceAndBroadCastActivity"
            android:exported="true" />
        <activity
            android:name=".FileHandlingActivity"
            android:exported="true" />
        <activity
            android:name=".LocationActivity"
            android:exported="true" />
        <activity
            android:name=".SendSMSActivity"
            android:exported="true" />
        <activity
            android:name=".AsyncTaskActivity"
            android:exported="true" />
        <activity
            android:name=".ShareReferencesActivity"
            android:exported="true" />
        <activity
            android:name=".EmailActivity"
            android:exported="true" />
        <activity
            android:name=".NotificationActivity"
            android:exported="true" />
        <activity
            android:name=".TimePickerActivity"
            android:exported="true" />
        <activity
            android:name=".Preference_Activity"
            android:exported="true" />
        <activity
            android:name=".AllTopics"
            android:exported="true"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Splash_Screen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <receiver android:name=".AlarmReceiver" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".onBoot"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.QUICK_POWERON"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>